{
  "ConnectionStrings": {
    "DefaultConnection": "CONFIGURE_VIA_USER_SECRETS_OR_ENVIRONMENT_VARIABLES"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Prosepo.Webhooks.Controllers": "Information",
      "Prosepo.Webhooks.Services": "Information"
    },
    "File": {
      "Directory": "Logs",
