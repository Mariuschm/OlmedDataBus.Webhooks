    "Password": "CONFIGURE_VIA_USER_SECRETS_OR_ENVIRONMENT_VARIABLES"
  },
  "WebhookStorage": {
    "Directory": "WebhookData",
    "EnableRawDataStorage": true,
    "EnableDecryptedDataStorage": true
